
@{
    ViewBag.Title = "Cleaning";
    var db = new oxinhem.Models.MyAppdbContext();
    var cln = new MyModels.Cleaning();
    cln = db.Cleanings.OrderByDescending(m => m.cleaningID).FirstOrDefault();
    var routeValues = this.ViewContext.RouteData.Values;
}

<section class="hero-wrap hero-wrap-2" style="background-image: url('/CoContent/images/Cleaning.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs mb-2"><span class="mr-2"><a href="/Home">@Resources.lang.Menu_Home <i class="fa fa-chevron-right"></i></a></span> <span>@Resources.lang.Menu_Cleaning <i class="fa fa-chevron-right"></i></span></p>
                <h1 class="mb-0 bread">@Resources.lang.Menu_Cleaning</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-no-pt ftco-no-pb">
    <div class="container">
        @if (routeValues["culture"].ToString() == "en")
        {
            @Html.Raw(cln.Body)
        }
        else
        {
            @Html.Raw(cln.BodySe)
        }
    </div>
</section>

